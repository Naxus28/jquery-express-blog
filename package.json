{
  "name": "jquery-express-blog",
  "version": "1.0.0",
  "description": "A blog built with a jquery client and an express API",
  "main": "index.js",
  "scripts": {
    "clean:server": "rm -rf dist",
    "clean:client": "rm -rf public/vendors",
    "bower:install": "./node_modules/bower/bin/bower install",
    "build:client": "npm run clean:client && npm run bower:install",
    "build": "babel server/dev -d server/dist -s --presets env,stage-0",
    "build:prod": "npm run clean:server && npm run build",
    "start": "npm run build:prod && node server/dist/index",
    "start:dev": "PORT=8080 npm run build:client && nodemon server/dev/index --exec babel-node",
    "start:debug": "PORT=8080 npm run build:client && nodemon --inspect server/dev/index --exec babel-node",
    "test": "PORT=5000 mocha server/test --require babel-register --exit",
    "postinstall": "npm run bower:install"
  },
  "author": "Gabriel Ferraz <gabrielferraz27@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-env": "^2.4.1",
    "babel-preset-stage-0": "^6.24.1",
    "body-parser": "^1.18.3",
    "bower": "^1.8.4",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "morgan": "^1.9.0",
    "nodemon": "^1.17.5",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-env": "^2.4.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "express": "^4.16.3",
    "mocha": "^5.2.0",
    "morgan": "^1.9.0",
    "uuid": "^3.2.1"
  },
  "engines": {
    "node": "^7.3.0",
    "npm": "3.10.10"
  }
}
